{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://grownative.dev/schemas/qa-topic.schema.json",
  "title": "Topic Fit QA Rules",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "allowedTopics",
    "disallowedTopics",
    "topicLevelMatrix"
  ],
  "properties": {
    "allowedTopics": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "disallowedTopics": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "topicLevelMatrix": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "topic",
          "minLevel",
          "maxLevel",
          "notes"
        ],
        "properties": {
          "topic": {
            "type": "string"
          },
          "minLevel": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8
          },
          "maxLevel": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}