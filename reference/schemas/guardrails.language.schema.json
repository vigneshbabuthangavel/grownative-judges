{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://grownative.dev/schemas/language-guardrails.schema.json",
  "title": "GrowNative Language Guardrails",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "language",
    "script",
    "levels",
    "lexical"
  ],
  "properties": {
    "language": {
      "type": "string",
      "enum": [
        "ta",
        "hi",
        "en"
      ]
    },
    "script": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "unicodeRanges",
        "minScriptPurity"
      ],
      "properties": {
        "unicodeRanges": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "minScriptPurity": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "levels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "level",
          "caps",
          "allowedPatterns"
        ],
        "properties": {
          "level": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8
          },
          "caps": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "maxWordsPerSentence",
              "maxSentencesPerPage",
              "maxClauseDepth"
            ],
            "properties": {
              "maxWordsPerSentence": {
                "type": "integer",
                "minimum": 1
              },
              "maxSentencesPerPage": {
                "type": "integer",
                "minimum": 1
              },
              "maxClauseDepth": {
                "type": "integer",
                "minimum": 0
              }
            }
          },
          "allowedPatterns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "disallowed": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "lexical": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "avoidLoanwordsUntilLevel",
        "tabooTokens"
      ],
      "properties": {
        "avoidLoanwordsUntilLevel": {
          "type": "integer",
          "minimum": 1,
          "maximum": 8
        },
        "tabooTokens": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "okayLoanwords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}